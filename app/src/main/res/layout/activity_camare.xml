<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context=".Camera.CamareActivity">

    <include
        android:id="@+id/CamareBase"
        layout="@layout/activity_base" />

    <SurfaceView
        android:id="@+id/sf_VideoMonitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="58px" />

    <TextView
        android:id="@+id/tv_Loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58px"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/CAMRomve"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600px"
        android:background="@mipmap/camera_move" />

    <RelativeLayout
        android:id="@+id/CAMlinear"
        android:layout_width="fill_parent"
        android:layout_height="324px"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:visibility="invisible">

        <Button
            android:id="@+id/btn_Up"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginLeft="70px"
            android:background="@mipmap/camera_move_up" />

        <Button
            android:id="@+id/btn_Down"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginLeft="70px"
            android:layout_marginTop="140px"
            android:background="@mipmap/camera_move_down" />

        <Button
            android:id="@+id/btn_Left"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginTop="70px"
            android:background="@mipmap/camera_move_left" />

        <Button
            android:id="@+id/btn_Right"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginLeft="140px"
            android:layout_marginTop="70px"
            android:background="@mipmap/camera_move_right" />

        <Button
            android:id="@+id/btn_ZoomIn"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginLeft="124px"
            android:layout_marginTop="230px"
            android:background="@mipmap/camera_move_bigger" />

        <Button
            android:id="@+id/btn_ZoomOut"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginLeft="35px"
            android:layout_marginTop="230px"
            android:background="@mipmap/camera_move_smaller" />

        <Button
            android:id="@+id/btn_Finish"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginLeft="240px"
            android:layout_marginTop="230px"
            android:background="@mipmap/camera_finish" />
    </RelativeLayout>
</RelativeLayout>
