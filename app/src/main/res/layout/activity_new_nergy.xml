<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.example.jjt_ssd.streetlamp.NewNergyActivity">

    <include
        android:id="@+id/MAPBase"
        layout="@layout/activity_base" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/green_energy_bg"
        android:scaleType="fitCenter"
        android:layout_below="@id/MAPBase"/>
    <com.example.jjt_ssd.streetlamp.Tools.RoundProgressBar
        android:id="@+id/roundProgressBar1"
        android:layout_width="390px"
        android:layout_height="390px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="272px"
        android_custom:roundColor="@color/colorTransParent"
        android_custom:roundProgressColor="@color/colorSelect"
        android_custom:roundWidth="10px"
        android_custom:textIsDisplayable="false" />

    <TextView
        android:id="@+id/NNElectricity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400px"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/colorSelect"
        android:textSize="76sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400px"
        android:layout_toRightOf="@+id/NNElectricity"
        android:text="%"
        android:textColor="@color/colorSelect"
        android:textSize="46sp" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@id/roundProgressBar1"
        android:layout_marginTop="150px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/NNMoney"
            android:text="省"
            android:textColor="@color/colorSelect"
            android:textSize="36px" />

        <TextView
            android:id="@+id/NNMoney"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="0"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:textSize="70px" />

        <TextView
            android:id="@+id/NNCompany"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/NNMoney"
            android:text="元"
            android:textColor="@color/colorNormal"
            android:textSize="36px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:layout_below="@id/rl1"
        android:layout_marginTop="20px"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/NNDateLong1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:text="储电电池供电时长"
            android:textColor="@color/colorNormal"
            android:textSize="24px" />

        <TextView
            android:id="@+id/NNDate1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/NNDateLong1"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/NNDatec1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/NNDate1"
            android:text="天"
            android:textColor="@color/colorNormal"
            android:textSize="24px" />

        <TextView
            android:id="@+id/NNTime1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/NNDatec1"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/NNTime1"
            android:text="时"
            android:textColor="@color/colorNormal"
            android:textSize="24px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:layout_below="@id/rl2"
        android:layout_marginTop="20px"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/NNDateLong2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:text="市电供电时长"
            android:textColor="@color/colorNormal"
            android:textSize="24px" />

        <TextView
            android:id="@+id/NNDate2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/NNDateLong2"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"

            android:textSize="24px" />

        <TextView
            android:id="@+id/NNDatec2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/NNDate2"
            android:text="天"
            android:textColor="@color/colorNormal"
            android:textSize="24px" />

        <TextView
            android:id="@+id/NNTime2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/NNDatec2"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:textSize="24px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/NNTime2"
            android:text="时"
            android:textColor="@color/colorNormal"
            android:textSize="24px" />
    </RelativeLayout>
</RelativeLayout>
